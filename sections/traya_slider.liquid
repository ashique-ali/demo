<div class="container_slider page-width">
  {% for block in section.blocks %}
  <div class="slider-image-box">
    <div class="image">
      <img src="{{ block.settings.image | img_url:''}}"/>
      <div class="slider_content">
        {{ block.settings.paragraph }}
      </div>
       <button class="btn">ADD TO CART</button>
    </div>
  </div>
  {% endfor %}
</div>
{% schema %}
  {
    "name": "traya_slider",
    "settings": [],  
    "blocks":[
  {
    "type":"heder",
     "name":"product",
     "limit":9,
     "settings":[
  {
    "type": "image_picker",
    "id": "image",
    "label": "Logo image"
  },
  {
    "type": "text",
    "id": "paragraph",
    "label": "Title",
    "default": "Title"
  }
  ]
  }
  ],
  "presets": [
                {
                  "name":"traya_slider",
                  "category":"custom"
                }
            ]
  }
{% endschema %}

<style>
.container_slider{
   width:100%;
   display:grid;
   grid-template-columns:auto auto auto; 
   background:#fff;
  padding-top:40px;
  padding-bottom:40px;
}
.slider-image-box{
    width:344px;
    border:0.5px solid #9c9494;
    margin:10px;
}
  .image img{
    width:344px;
    height:auto;
}
  .image{
     text-align:center;
  }
  .slick-prev.pull-right{
    position: absolute;
    top: 50%;
    right: 45px;
    color: black;
    }
  .slick-next.pull-left{
    position:absolute;
    top: 50%;
    left: 45px;
    color: black;
    }
  .btn{
    width:95%;
    padding:15px;
    background: #212529;
    color:#fff;
    font-size:20px;
    border:none;
    font-weight:bold;
    text-align:center;
    margin-top:40px;
    margin-bottom:10px;
    border-radius:5px;
  }
  .btn:hover{
    background:#ffc107;
    cursor:pointer;
  }
</style>

<script>
  $(document).ready(function(){
    $('.container_slider').slick({
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 3,
      autoplay: false,
    responsive: [
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
  ]        
  });
});
</script>