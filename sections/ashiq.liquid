<div class="container_box page-width">
  {% for block in section.blocks %}
    <div class="image_boxx1">
      <a class="link" title=""
          href=" {{ block.settings.button_link }}">
        <div class="img_card">
          <img  src="{{ block.settings.image | img_url:''}}"/>
        </div>
        <div class="image_boxx2">
          {{ block.settings.paragraph }}
        </div>
      </a>
    </div>
  {% endfor %}
</div>
{% schema %}
  {
    "name": "product",
    "settings": [],  
    "blocks":[
    {
      "type":"heder",
       "name":"product",
       "limit":8,
       "settings":[
        {
          "type": "image_picker",
          "id": "image",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "paragraph",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
                {
                  "name":"product",
                  "category":"custom"
                }
            ]
}
{% endschema %}
<style>
  *{
    box-sizing:border-box;
    margin:0;
    padding:0;
  }
  .container_box{
    display:grid;
    grid-template-columns:auto auto auto auto; 
  }
  .image_boxx1{
    width:100%;
    height:279px;
    position:relative;
    overflow:hidden;
    padding:0 5px 0 5px;
  }
  .image_boxx1 img{
    width:100%;
  }
  .img_card{
    overflow:hidden;
    width:100%;
    height:100%;
  }
  .image_boxx2{
  	width:96.5%;
    height:30px;
    background:black;
    color:#fff;
    position:absolute;
    bottom:-30px;
    left:1.7%;
    text-align:center; 
    padding:3px;
    text-align:center;
    transition:0.5s;
  }
  .image_boxx1:hover .image_boxx2{
	bottom:0px;
    cursor:pointer;
  }
  .image_boxx1 img:hover{
    transform: scale(1.3);
    transition:0.5s;
    cursor:pointer;
  }

  @media only screen and (max-width:780px) {
   .container_box{
    display:grid;
    grid-template-columns:auto auto; 
  }
  .image_boxx1{
    width:100%;
    height:279px;
    position:relative;
    overflow:hidden;
    padding:10px 5px 5px 5px;
  }
  .image_boxx1 img{
    width:100%;
    border-radius:5px;
  }
  .img_card{
    overflow:hidden;
    width:100%;
    height:100%;
  }
  .image_boxx2{
  	width:96.5%;
    height:30px;
    background:black;
    color:#fff;
    position:absolute;
    bottom:-30px;
    left:1.7%;
    text-align:center; 
    padding:3px;
    text-align:center;
    transition:0.5s;
  }
  .image_boxx1:hover .image_boxx2{
	bottom:0px;
    cursor:pointer;
  }
  .image_boxx1 img:hover{
    transform: scale(1.3);
    transition:0.5s;
    cursor:pointer;
  }
}
</style>