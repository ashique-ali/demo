<!-- traya_review_section -->

<div class="page-width">
  {% if section.settings.heading  != blank %}
    <div class="heading2">
      <h2><center>{{ section.settings.heading }}</center></h2>
    </div>
  {% endif  %}
  <div class="customer_review_slider">
    {% for block in section.blocks %}
      <div class="review_slider_box">
        {% if block.settings.image_slider !=blank %}
          <div class="review_slider">
            <img src="{{ block.settings.image_slider | img_url:'master' }}"/>
            <div class="title_with_line">
              <h5>{{ block.settings.heading2 }}</h5>
            </div>
          </div> 
          <div class="reviews_paragraph">
            <p>{{ block.settings.review_content }}</p>
          </div>
          <div class="review_btn justify-content-between">
            <p>
              <strong>Used for : </strong>10 Months
            </p> 
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "reviews-slider",
    "settings":[
      {
        "type": "text",
        "id": "heading",
        "label": "Title",
        "default": "Title" 
      }
    ],  
      "blocks":[
    {
      "type":"heder",
       "name":"reviews-slider",
       "limit":6,
       "settings":[
        {
          "type": "image_picker",
          "id": "image_slider",
          "label": "Logo image"
        },
        {
          "type": "text",
          "id": "heading2",
          "label": "Heading",
          "default": "Content"
        },
        {
          "type": "text",
          "id": "review_content",
          "label": "Heading",
          "default": "Content"
        }
      ]
    }
  ],
  "presets":[
                {
                  "name":"reviews-slider",
                  "category":"custom"
                }
            ]
  }
{% endschema %}
<style>
  .review_slider_box{
    background:#fff;
    border-radius:10px;
    margin:10px;
    height:435px;
    padding:15px;
  }
  .review_slider img{
    width:100%;
    overflow:hidden;
  }
  .title_with_line h5{
    font-size: 18px;
    padding-top:10px;
    padding-bottom:8px;
    font-weight: 500;
    color: #414042;
    line-height: 1.29;
  }
  .reviews_paragraph p{
    font-weight: 300;
    line-height: 1.35;
    color: #6d6e71;
    font-size:15px;
    text-align:justify;
  }
  .slick_prev{
    width:20px;
    height:20px;
    position:absolute;
    top:50%;
    left:-15px;
    border:none;
  }
   .slick_next{
    width:20px;
    height:20px;
    position:absolute;
    top:50%;
    right:-15px;
    border:none;
  }
  .review_btn p{
    font-size: 15px;
    font-weight: normal;
    line-height: 2.27;
    letter-spacing: 0.08px;
  }
  strong{
    font-weight:700;
  }
</style>

<script>
  $(document).ready(function(){
     $('.customer_review_slider').slick({
      slidesToShow:3,
      slidesToScroll: 2,
      autoplaySpeed:2000,
      infinite: true,
      arrows: true,
      dots: false,
      prevArrow:'<button type="button" class="slick_prev pull-left"><svg class="chevron_left" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 22 41" fill="none"><path d="M21 0.526611L1 20.5266L21 40.5266" stroke="black"/></svg></button>',
      nextArrow:'<button type="button" class="slick_next pull-right"><svg class="chevron_right" xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 22 41" fill="none"><path d="M1 0.526611L21 20.5266L1 40.5266" stroke="black"/></svg></button>',
      responsive: [
    {
      breakpoint: 768,
      settings: {     
        slidesToShow: 1,
        slidesToScroll: 1
      }
    }
    ]
    });
  });
</script>