<div class="min-section position-relative pt-0">
  {% if section.settings.des_img !=blank %}
    <div class="min-section-main1">
      <img src="{{ section.settings.des_img | img_url:' ' }}" width="100%" class="image_section_main1 d-none d-md-block">
    </div>
  {% endif %}
  {% if section.settings.des_img !=blank %}
    <div class="min-section-main2">
      <img src="{{ section.settings.mob_img | img_url:' ' }}" width="100%" class="image_section_main2 d-md-none position-relative">
    </div>
  {% endif %}
  <div class="min-section-text">
    {% if section.settings.traya_white_image !=blank %}
    <div class="min-section-first text-white mb-1 mb-md-auto">
      <img src="{{ section.settings.traya_white_image | img_url:' ' }}"/>
    </div>
    {% endif %}
    {% if section.settings.paragraph1 !=blank %}
      <p class="min-section-second font-weight-bold pb-md-3">
        {{ section.settings.paragraph1 }}
      </p>
    {% endif %}
    {% if section.settings.paragraph2 !=blank %}
      <p class="min-section-third font-weight-bold mb-3 mt-md-4">
        {{ section.settings.paragraph2 }}
      </p>
    {% endif %}
    {% if section.settings.paragraph3 !=blank %}
      <p class="min-section-fourth">
        {{ section.settings.paragraph3 }}
      </p>
    {% endif %}
    <div class="d-none d-md-block">
      <a href="{{ section.settings.button_link }}" class="science_page_link btn btn-dark mt-0 p-4 shadow">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
  <div class="d-md-none text-center mobile-science-button position-absolute">
    <a href="{{ section.settings.mobile_button_link }}" class="form_action_link btn btn-dark mt-0 shadow">
      {{ section.settings.mobile_button_text }}
    </a>
  </div>
</div>
{% schema %}
  {
    "name": "Min-Section",
    "settings":[
    {
      "type": "image_picker",
      "id": "des_img",
      "label": "Select Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mob_img",
      "label": "Select Mobile Image"
    },
    {
      "type": "image_picker",
      "id": "traya_white_image",
      "label": "traya_white_image"
    },
    {
      "type": "text",
      "id": "paragraph1",
      "label": "paragraph1",
      "default": "Title"
    },
    {
      "type": "text",
      "id": "paragraph2",
      "label": "paragraph2",
      "default": "Title"
    },
    {
      "type": "text",
      "id": "paragraph3",
      "label": "paragraph3",
      "default": "Title"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "button_text",
      "default": "Title"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "mobile_button_text",
      "label": "mobile_button_text",
      "default": "Title"
    },
    {
      "type": "url",
      "id": "mobile_button_link",
      "label": "mobile_button_link"
    }
  ],
  "presets":[
              {
                  "name":"min-section",
                  "category":"custom"
                }
              ]
}
{% endschema %}

