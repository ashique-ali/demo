<section class="bg-white">
  <div class="container pt-5">
    <h2 class="section-title-main text-center">{{ section.settings.heading3 }}</h2>
    <div class="row">
      <div class="col-md-10 mx-auto">
        <div class="row align-items-center">
          <div class="col-md-6 mb-4 text-center text-md-left">
            <h3 class="paragraph1 col-md-7 mb-4 px-0 d-none d-md-block">
              {{ section.settings.paragraph1 }}
            </h3>
            <h6 class="paragraph1_mobile_view col-md-7 mb-4 px-0 d-md-none">
              {{ section.settings.paragraph1_mobile_view }}
            </h6>
            <button type="button" class="btn btn-info p-3 font-weight-bold">
              BUILD YOUR PROFILE
            </button>
          </div>
          <div class="col-md-6 d-none d-md-block">
            <img class="image w-100" src="{{ section.settings.mobile_image | img_url:' ' }}"/>  
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-dark py-3 d-none d-md-block">
    <h3 class="footer_text font-weight-bold l-0 mb-0 text-center text-white">{{ section.settings.footer_text }}</h3>
  </div>
  <div class="d-md-none">
    <div class="container">
      <h6 class="footer_text_mobile_view mb-0 text-center">This will enable the doctor to better assess your case</h6>
    </div>
  </div>
  <div class="d-md-none mt-5">
     <img src="{{ section.settings.mobile_view_image | img_url:' ' }}" alt="This will enable the doctor to better assess your case" class="col-10 mx-auto d-block">
  </div>
</section>
